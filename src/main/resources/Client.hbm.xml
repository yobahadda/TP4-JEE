<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.tp4.Client" table="clients">
        <id name="code" column="code" type="int">
            <generator class="native"/>
        </id>
        <property name="datecom" column="datecom" type="date"/>
        <property name="montant" column="montant" type="float"/>
        <property name="modelP" column="mode_p" type="string"/>
        <property name="statusP" column="status_p" type="string"/>
        <property name="modeL" column="mode_l" type="string"/>
        <property name="statusL" column="status_l" type="string"/>
    </class>
</hibernate-mapping>